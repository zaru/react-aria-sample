{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": ["tsconfig.*.json", ".next/**/*"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "fix": "safe",
          "options": {}
        },
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "react-aria-components": "Use import react-aria-components from \"/components/Aria\";"
            }
          }
        }
      }
    }
  },
  "overrides": [
    {
      "include": ["src/app/_components/Aria/**"],
      "linter": {
        "rules": {
          "nursery": {
            "noRestrictedImports": "off"
          }
        }
      }
    }
  ],
  "formatter": {
    "indentStyle": "space"
  }
}
